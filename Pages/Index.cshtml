@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    /* Custom CSS for the carousel */
    .carousel-item img {
        width: 100%;
        height: 100vh;
        object-fit: cover;
    }

    /* Center the text inside the carousel */
    .carousel-caption {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white; /* Change text color */
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Add text shadow */
    }

    /* Style carousel controls */
    .carousel-control-prev,
    .carousel-control-next {
        width: 5%;
        background: rgba(0, 0, 0, 0.5); /* Add transparent background */
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        filter: brightness(100); /* Adjust brightness */
    }

        .carousel-control-prev-icon:hover,
        .carousel-control-next-icon:hover {
            filter: brightness(120); /* Increase brightness on hover */
        }

    /* Center the welcome text */
    .welcome-text {
        margin-top: 50px;
    }
</style>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Images/airport1.jpg" class="d-block w-100" alt="Airport 1">
            <div class="carousel-caption">
                <h5>Welcome to Airline Database Management System</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Images/airport2.jpg" class="d-block w-100" alt="Airport 2">
            <div class="carousel-caption">
                <h5>Welcome to Airline Database Management System</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Images/airport3.jpg" class="d-block w-100" alt="Airport 3">
            <div class="carousel-caption">
                <h5>Welcome to Airline Database Management System</h5>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="text-center welcome-text">
    <h1 class="display-4">Welcome</h1>
    <p>Airline Database Management Systems</p>
</div>
